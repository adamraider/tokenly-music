doctype html
html(lang="en")
  head
    include partials/_head
  body(ng-app="app" ng-controller="MainController")
    include partials/_botplayer
    include partials/_sidebar
    .content-wrapper.with-side-nav
      include partials/_topbar
      .page-information
        span.page-heading {{ page.title }}
        span.page-subheading {{ page.subtitle }}
      .content.with-gutter
        table
          thead
            tr
              th #
              th Song
              th Artist
              th Album
              th Length
              th Tokens
          tbody
            tr(ng-repeat="song in songs")
              td.muted {{ song.id }}
              td {{ song.name }}
              td {{ song.artist }}
              td {{ song.album }}
              td.muted {{ song.length }}
              td.muted {{ song.tokens }}
    .clearfix